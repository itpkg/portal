<% case title %>
<% when :remove %>
    <%= link_to t('buttons.remove'), href, class: "btn btn-danger #{'btn-sm' if sm}", method: :delete, data: {confirm: t('messages.are_you_sure')} %>
<% when :show %>
    <%= link_to t('buttons.view'), href, class: "btn btn-secondary #{'btn-sm' if sm}" %>
<% when :new %>
    <%= link_to t('buttons.new'), href, class: "btn btn-success #{'btn-sm' if sm}" %>
<% when :edit %>
    <%= link_to t('buttons.edit'), href, class: "btn btn-warning #{'btn-sm' if sm}" %>
<% else %>
    <%= link_to t('buttons.submit'), href, class: "btn btn-primary #{'btn-sm' if sm}" %>
<% end %>
