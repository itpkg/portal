<% cache "books/#{@title}" do %>
<div class="row">
  <div class="col-sm-offset-1 col-sm-8">
    <%= raw @body %>
  </div>
  <div class="col-sm-2">
<h3><%= t 'books.index.title' %></h3>
    <hr/>
    <ul>
      <% @books.each do |b|%>
      <li><%= link_to b, book_path(b)%></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>