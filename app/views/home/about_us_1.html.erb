<% @title = t 'site.about_us.title' %>
<style type="text/css">
  #map {
    height: 100%;
  }

  html, body {
    height: 100%;
  }

</style>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <div>
      <%= raw to_html(Setting.get_site_info('details')) %>
    </div>

    <div id="map"></div>

    <br/>
    <h4><%= t '.leave_message' %></h4>
    <hr>
    <%= simple_form_for(@leave_word) do |f| %>
        <%= f.input :content, as: :text %>
        <%= f.button :submit, t('buttons.submit') %>
    <% end %>

  </div>
</div>

<% if @loc && @key %>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: <%= @loc.fetch :lat %>, lng: <%= @loc.fetch :lng%>},
          zoom: 8
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= @key %>&callback=initMap"
            async defer></script>
<% end %>