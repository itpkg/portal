<% @title = t '.title' %>

<%= render 'shared/button', title: :new, href: new_cms_tag_path, sm: false %>
<br/><br/>
<%= grid(@tags) do |g|
  g.column name: t('.name') do |i|
    link_to i.name, cms_tag_path(i), target: '_blank'
  end
  g.column name: t('.visits') do |i|
    i.visits
  end
  g.column name: t('buttons.manage') do |i|
    render 'shared/manage_column', edit: edit_cms_tag_path(i), remove: cms_tag_path(i)
  end
end -%>
